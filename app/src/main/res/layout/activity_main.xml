<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawing_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/toplogo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/toplogo" />

    </RelativeLayout>

    <com.saiflimited.drawing.DrawingView
        android:id="@+id/drawing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

    </com.saiflimited.drawing.DrawingView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <RelativeLayout
            android:id="@+id/brushcolor"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/brushLayout">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/brushLayout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/brushsize"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eraserView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/pannel"
        android:padding="5dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="#000000"
            android:src="@drawable/ic_action_discard" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btnClear"
            android:background="#000000"
            android:src="@drawable/ic_action_save" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btnSave"
            android:background="#000000"
            android:src="@drawable/ic_action_share" />

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btnShare"
            android:background="#000000"
            android:src="@drawable/ic_action_camera" />

        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btnCamera"
            android:background="#000000"
            android:text="CHOOSE"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/eraser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/eraser" />

    </RelativeLayout>

</LinearLayout>
    
 