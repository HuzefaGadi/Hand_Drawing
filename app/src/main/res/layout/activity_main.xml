<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawing_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp">


    <com.saiflimited.drawing.DrawingView
        android:id="@+id/drawing"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_above="@+id/layout_below"
        android:background="#FFFFFF">

    </com.saiflimited.drawing.DrawingView>

    <RelativeLayout
        android:id="@+id/layout_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|center_vertical">

        <RelativeLayout
            android:id="@+id/brushcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toplogo"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/toplogo"
            android:layout_toLeftOf="@+id/toplogo"
            android:background="#000000"
            android:gravity="center_horizontal|center_vertical">
        </RelativeLayout>

        <ImageView

            android:id="@+id/toplogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/toplogo" />

        <RelativeLayout
            android:id="@+id/brushLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/toplogo"
            android:layout_alignBottom="@+id/toplogo"
            android:layout_toRightOf="@+id/toplogo"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/brushsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
    
 